generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  // autoincrement())は自動的にIDが1ずつ増えていく
  username  String
  title     String
  content   String
  createdAt DateTime @default(now())
  // @default(now())は投稿した日づけが自動的に設定される
  // この中の Int, String, DateTime などは Prismaの型
}
